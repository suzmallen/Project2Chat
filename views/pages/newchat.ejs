    <script>
    getInfo();
    
    function getInfo(){
        
        $('#chats').empty();
        var url = "/getchats";
        $.get( url, function( data ) {
            var chats = data;
            console.log(data[0]);
            $.each(chats, function (index, value) {
                $('#chats').append($('<li><a href="/chat?id='+ chats[index].sessionuserid + '&sessionid=' + chats[index].sessionid + '">' + chats[index].sessionname + '</a></li>'));
            }); 
            //alert("chats were loaded");
            });
        
    }   
